#!/bin/sh

# Ensure React Native Config picks up the correct .env file during xcodebuilds.
# If ENVFILE is already an absolute path we leave it untouched.
# Otherwise we resolve it relative to the repository root (parent of ios/).

if [ -z "$ENVFILE" ]; then
  export ENVFILE="../.env"
else
  case "$ENVFILE" in
    /*) ;; # absolute path provided, nothing to do
    ../*) ;; # already relative to root, leave as-is
    *)
      export ENVFILE="../$ENVFILE"
      ;;
  esac
fi
