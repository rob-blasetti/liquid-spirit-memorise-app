default_platform(:android)

platform :android do
  desc "Build release AAB and upload to Google Play Internal"
  lane :internal do
    # Decode Play JSON key from env if provided by CI
    if ENV['GOOGLE_PLAY_JSON_KEY']
      UI.message('Using Google Play JSON key from env')
    end

    # Build the app bundle
    gradle(
      task: 'bundle',
      build_type: 'Release'
    )

    aab_path = 'app/build/outputs/bundle/release/app-release.aab'

    # Upload to Internal track
    upload_to_play_store(
      track: 'internal',
      aab: aab_path,
      json_key_data: ENV['GOOGLE_PLAY_JSON_KEY']
    )
  end
end

